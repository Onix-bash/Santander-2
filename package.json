{
  "scripts": {
    "postinstall": "husky install && husky add .husky/pre-commit \"npm run precommit\"",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-apex": "^2.0.1"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "/{aura,lwc}/**/*.js": [
      "eslint"
    ]
  }
}
