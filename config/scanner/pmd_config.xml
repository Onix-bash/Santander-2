<?xml version="1.0"?>
<ruleset name="PMD Custom Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <!-- Data Model: Start -->
    <rule name="DescriptionIsRequired" language="xml" message="Description is required" class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <properties>
            <property name="xpath"><value><![CDATA[//(CustomObject | CustomField)[not(description)]]]></value></property>
        </properties>
        <priority>2</priority>
    </rule>
    <!-- Data Model: End -->
</ruleset>