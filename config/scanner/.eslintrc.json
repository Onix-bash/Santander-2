{
  "extends": [
    "eslint:recommended",
    "plugin:@salesforce/lwc/recommended"
  ],
  "plugins": [
    "@salesforce/eslint-plugin-lwc"
  ],
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}
